<p id="notice"><%= notice %></p>

<h1>Tree Species</h1>

<table class="table table-striped">
  <thead class="table-info">
    <tr>
      <th>Species Name</th>
      <th>Species Code</th>
      <th>Foilage Type</th>
      <th>Foliage Strategy</th>
      <th>Taxonomy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tree_species.each do |tree_specy| %>
      <tr>
        <td><%= tree_specy.species_name.to_s.capitalize %></td>
        <td><%= tree_specy.species_code.to_s.upcase %></td>
        <td><%= tree_specy.foilage_type %></td>
        <td><%= tree_specy.foilage_strategy %></td>
        <td><%= tree_specy.taxonomy %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Show', tree_specy %></td>
          <td><%= link_to 'Edit', edit_tree_specy_path(tree_specy) %></td>
          <td><%= link_to 'Destroy', tree_specy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Tree Specy', new_tree_specy_path %>
<% end %>
