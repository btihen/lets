<p id="notice"><%= notice %></p>

<h1>Tree Species</h1>

<table>
  <thead>
    <tr>
      <th>Species name</th>
      <th>Species code</th>
      <th>Leaf type</th>
      <th>Leaf strategy</th>
      <th>Seed type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tree_species.each do |tree_specy| %>
      <tr>
        <td><%= tree_specy.species_name %></td>
        <td><%= tree_specy.species_code %></td>
        <td><%= tree_specy.foilage_type %></td>
        <td><%= tree_specy.foilage_strategy %></td>
        <td><%= tree_specy.seed_type %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Show', tree_specy %></td>
          <td><%= link_to 'Edit', edit_tree_specy_path(tree_specy) %></td>
          <td><%= link_to 'Destroy', tree_specy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Tree Specy', new_tree_specy_path %>
<% end %>
