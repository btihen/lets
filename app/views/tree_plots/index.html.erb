<p id="notice"><%= notice %></p>

<h1>Tree Plot Details</h1>

<table class="table table-striped">
  <thead class="table-info">
    <tr>
      <th>Plot Name</th>
      <th>Plot Code</th>
      <th>Plot Slope</th>
      <th>Plot Aspect</th>
      <th>Plot Elevation (m)</th>
      <th>Plot Latitude</th>
      <th>Plot Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tree_plots.each do |tree_plot| %>
      <tr>
        <td><%= tree_plot.plot_name %></td>
        <td><%= tree_plot.plot_code.to_s.upcase %></td>
        <td><%= tree_plot.plot_slope %></td>
        <td><%= tree_plot.plot_aspect %></td>
        <td><%= tree_plot.elevation_m %></td>
        <td><%= tree_plot.latitude %></td>
        <td><%= tree_plot.longitude %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Show', tree_plot %></td>
          <td><%= link_to 'Edit', edit_tree_plot_path(tree_plot) %></td>
          <td><%= link_to 'Destroy', tree_plot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Tree Plot', new_tree_plot_path %>
<% end %>
