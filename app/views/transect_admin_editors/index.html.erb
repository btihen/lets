<p id="notice"><%= notice %></p>

<h1>Transect Admin Editor Priveleges</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center">Transect</th>
      <th class="text-center">Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transect_admin_editors.each do |transect_admin_editor| %>
      <tr>
        <td class="text-center"><%= transect_admin_editor.transect.transect_code %></td>
        <td class="text-center"><%= transect_admin_editor.admin.email %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Show', transect_admin_editor %></td>
          <td><%= link_to 'Edit', edit_transect_admin_editor_path(transect_admin_editor) %></td>
          <td><%= link_to 'Destroy', transect_admin_editor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Admin Privelege', new_transect_admin_editor_path %>
<% end %>
