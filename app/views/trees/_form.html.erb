<%= form_with(model: tree, local: true) do |form| %>
  <% if tree.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tree.errors.count, "error") %>
        prohibited this tree from being saved:</h2>

      <ul>
      <% tree.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :plot %>
    <%= form.collection_select :plot_id, Plot.order(:plot_code),
                                :id, :plot_code, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :subquadrat %>
    <%= form.text_field :subquadrat %>
  </div>

  <div class="field">
    <%= form.label :tree_number %>
    <%= form.number_field :tree_number %>
  </div>

  <div class="field">
    <%= form.label :species %>
    <%= form.text_field :species %>
  </div>

  <div class="field">
    <%= form.label :circumfrence_cm %>
    <%= form.number_field :circumfrence_cm %>
  </div>

  <div class="field">
    <%= form.label :measurement_date %>
    <%= form.date_select :measurement_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
