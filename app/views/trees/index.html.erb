<p id="notice"><%= notice %></p>

<h1>Trees</h1>

<table>
  <thead>
    <tr>
      <th>subquadrat</th>
      <th>Tree number</th>
      <th>Species</th>
      <th>Circumfrence (cm)</th>
      <th>Measurement date</th>
      <th>Plot</th>
      <th>Plot Elevation (m)</th>
      <th>Plot Latitude</th>
      <th>Plot Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <td><%= tree.subquadrat %></td>
        <td><%= tree.tree_number %></td>
        <td><%= tree.species %></td>
        <td><%= tree.circumfrence_cm %></td>
        <td><%= tree.measurement_date %></td>
        <td><%= tree.plot.plot_code %></td>
        <td><%= tree.plot.elevation_m %></td>
        <td><%= tree.plot.latitude %></td>
        <td><%= tree.plot.longitude %></td>
        <td><%= link_to 'Show', tree %></td>
        <td><%= link_to 'Edit', edit_tree_path(tree) %></td>
        <td><%= link_to 'Destroy', tree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

